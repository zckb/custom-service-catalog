@model ServiceCatalog.Models.ResourceGroupManagementViewModel

@{
    ViewBag.Title = "Delete VMs";
}

<div style="height: 400px;">
    @using (Html.BeginForm("DeleteResourceGroups", "ResourceGroup", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <h4>Delete VMs</h4>
        <p>The action can't be undone. Virtual Machines with the specific tag value will be deleted permanently.</p>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(m => m.Tag, new { @class = "col-sm-1 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Tag,
                    new
                    {
                        @class = "form-control",
                        @placeholder = "e.g. Tagname=TagValue"
                    })
                @Html.ValidationMessageFor(m => m.Tag)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3 col-md-offset-1">
                <button id="delete" type="submit" class="btn btn-danger">Delete</button>
            </div>
        </div>
    }
</div>