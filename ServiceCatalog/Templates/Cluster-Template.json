{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "storageAccountNamePrefix": {
      "type": "string",
      "metadata": {
        "description": "Unique name of the new storage account that will be created to store virtual machine VHDs"
      }
    },
    "domainName": {
      "type": "string",
      "metadata": {
        "description": "Domain name of the public jumpbox"
      }
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "eduadmin",
      "metadata": {
        "description": "Virtual machine administrator username"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Virtual machine administrator password"
      }
    },
    "virtualMachineName": {
      "type": "string",
      "defaultValue": "edu",
      "metadata": {
        "description": "Virtual machine prefix"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    }
  },
  "variables": {
    "masterTemplateLink": "https://logic2020.repositoryhosting.com/git_public/logic2020/svccat.git/blob_plain/refs/heads/master:/ServiceCatalog/Templates/Ubuntu-Server-Master.json",
    "slaveTemplateLink": "https://logic2020.repositoryhosting.com/git_public/logic2020/svccat.git/blob_plain/refs/heads/master:/ServiceCatalog/Templates/Ubuntu-Server-Local.json"
   },
  "resources": [
    {
      "name": "master-node",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('masterTemplateLink')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "West US 2"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "dnsLabelPrefix": {
            "value": "[concat(parameters('domainName'), '-dns')]"
          },
          "virtualMachineName": {
            "value": "[concat(parameters('virtualMachineName'), '-master')]"
          },
          "privateIPAddress": {
            "value": "10.0.0.4"
          },
          "nodeType": {
            "value": "MASTER"
          }
        }
      }
    },
    {
      "name": "slave1-node",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'master-node')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('slaveTemplateLink')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "virtualMachineName": {
            "value": "[concat(parameters('virtualMachineName'), '-slave1')]"
          },
          "networkInterfaceName": {
            "value": "network-interface-1"
          },
          "privateIPAddress": {
            "value": "10.0.0.5"
          },
          "nodeType": {
            "value": "SLAVE"
          }
        }
      }
    },
    {
      "name": "slave2-node",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'master-node')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('slaveTemplateLink')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "virtualMachineName": {
            "value": "[concat(parameters('virtualMachineName'), '-slave2')]"
          },
          "networkInterfaceName": {
            "value": "network-interface-2"
          },
          "privateIPAddress": {
            "value": "10.0.0.6"
          },
          "nodeType": {
            "value": "SLAVE"
          }
        }
      }
    }
  ],
  "outputs": {}
}